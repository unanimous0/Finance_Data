# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=korea_stock_data
DB_USER=postgres
DB_PASSWORD=your_password_here

# Database Pool Settings
DB_POOL_SIZE=5
DB_MAX_OVERFLOW=10

# API Keys
INFOMAX_API_KEY=your_infomax_api_key
INFOMAX_API_SECRET=your_infomax_api_secret
INFOMAX_BASE_URL=https://api.infomax.co.kr

# HTS API (증권사별로 추가)
HTS_API_KEY=your_hts_api_key
HTS_API_SECRET=your_hts_api_secret

# Application Settings
APP_ENV=development  # development, staging, production
LOG_LEVEL=INFO       # DEBUG, INFO, WARNING, ERROR
TZ=Asia/Seoul

# Scheduler Settings
SCHEDULER_ENABLED=true
DAILY_COLLECTION_TIME=18:00  # 장 마감 후 수집 시작 시간

# Data Collection Settings
COLLECTION_RETRY_COUNT=3
COLLECTION_TIMEOUT_SECONDS=300
BATCH_SIZE=100

# Monitoring & Alerting (선택사항)
SLACK_WEBHOOK_URL=
EMAIL_ALERT_ENABLED=false
EMAIL_SMTP_HOST=
EMAIL_SMTP_PORT=587
EMAIL_FROM=
EMAIL_TO=

# Cache Settings (Redis - 선택사항)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
CACHE_TTL_SECONDS=3600

# API Settings (FastAPI - 선택사항)
API_ENABLED=false
API_HOST=0.0.0.0
API_PORT=8000
API_CORS_ORIGINS=http://localhost:3000,http://localhost:8080
